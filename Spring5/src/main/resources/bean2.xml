<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  build service and dao  -->
    <bean id="useService" class="com.spring5.service.UserService">
        <!--    inject useDao object from external
          ref: refer to line 13, id = "UserDao"-->
        <property name="userDao" ref="UserDaoImpl"></property>
    </bean>

    <bean id="UserDaoImpl" class="com.spring5.dao.UserDaoImpl"></bean>
</beans>