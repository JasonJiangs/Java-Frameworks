<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="emp" class="com.spring5.bean.Emp">
        <property name="eName" value="Jason"></property>
        <property name="gender" value="Male"></property>

        <!--        -->
        <property name="dept" ref="dept"></property>
        <!--    need get() function of dName from Emp    -->
        <property name="dept.dName" value="CS"></property>
    </bean>
    <bean id="dept" class="com.spring5.bean.Dept">
        <property name="dName" value="CS"></property>
    </bean>
</beans>